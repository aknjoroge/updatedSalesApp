<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"

    android:layout_margin="8dp"
    app:cardElevation="2dp"
    app:cardMaxElevation="2dp"
    android:padding="10dp"
    app:cardCornerRadius="10dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TableLayout
            android:layout_margin="2dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableRow
                android:layout_margin="2dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <ImageView
                    android:layout_margin="7dp"
                    android:id="@+id/imageView6"
                    android:scaleType="centerCrop"
                    android:layout_width="wrap_content"
                    android:layout_height="160dp"
                    app:srcCompat="@drawable/techkey" />
            </TableRow>
            <TableRow
                android:layout_margin="2dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:textAlignment="center"
                    android:fontFamily="@font/arial"
                    android:layout_margin="3dp"
                    android:id="@+id/feednametxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TextView" />
            </TableRow>

            <TableRow

                android:layout_width="match_parent"
                android:layout_height="match_parent" >
                <Button
                    android:layout_weight="10"
                    android:id="@+id/feedmorebtn"
                    android:layout_margin="3dp"
android:fontFamily="@font/arial"
                    android:layout_width="0dp"
                    android:background="@drawable/custominput"
                    android:layout_height="wrap_content"
                    android:text="@string/viewproduct" />


                <com.like.LikeButton
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"

                    app:icon_type="heart"
                    app:icon_size="15dp"
                    android:layout_margin="4dp"
                    app:anim_scale_factor="2"
                    app:circle_start_color="@color/colorPrimary"
                    android:id="@+id/feedlike"
                    >

                </com.like.LikeButton>
                <TextView
                    android:textAlignment="center"
                    android:fontFamily="@font/arial"
                   android:layout_margin="1dp"
                    android:id="@+id/feedlikeno"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:text="10" />


                <ImageButton
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:id="@+id/feedshare"
                    android:background="@android:color/transparent"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:srcCompat="@drawable/share_24" />


            </TableRow>



        </TableLayout>


    </LinearLayout>
</androidx.cardview.widget.CardView>