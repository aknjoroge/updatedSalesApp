<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/verifylayout"
    android:orientation="vertical"


    android:padding="5dp"
    android:layout_height="match_parent"
    tools:context=".emailverification">

    <ImageView
        android:layout_gravity="center"
        android:id="@+id/imageView4"
        android:layout_margin="25dp"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:srcCompat="@drawable/ic_pork2" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:fontFamily="@font/arial"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="@string/firstconfirm"
        android:textAlignment="center"
        android:textColor="@color/red"
        android:textSize="16dp"
        android:visibility="invisible" />

    <ProgressBar
        android:id="@+id/emaiwarnprogressbar"
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="invisible" />

    <TextView
        android:layout_margin="5dp"
        android:id="@+id/textView7"
        android:textAlignment="center"
        android:fontFamily="@font/arial"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/openmail" />

    <TextView
        android:textAlignment="center"
        android:id="@+id/textView13"

        android:fontFamily="@font/arial"
        android:textColor="@color/black"
        android:textSize="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/afterverifing" />

    <TextView
        android:id="@+id/resendcodetxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="@string/resendlink"
        android:textAlignment="center"
        android:textColor="@color/greendark" />

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:padding="3dp"
        android:layout_gravity="center"

        android:layout_marginTop="55dp"
        android:layout_marginBottom="8dp"
        android:elevation="20dp"
        app:cardBackgroundColor="@color/red"
        app:cardCornerRadius="10dp"
        app:cardElevation="20dp">
        <Button
            android:textColor="@color/white"
            android:layout_margin="3dp"

            android:visibility="gone"
            android:fontFamily="@font/arial"
            android:background="@android:color/transparent"
            android:id="@+id/closeappbtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/exitapp" />
    </androidx.cardview.widget.CardView>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:gravity="center"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >


            <ImageView
                android:layout_weight="1"
                android:id="@+id/tuwashowmimg2"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                app:srcCompat="@drawable/tuwashowlogo" />

            <ImageView
                android:layout_weight="1"
                android:id="@+id/techkeyimg2"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                app:srcCompat="@drawable/techkey" />
        </TableRow>


    </TableLayout>

</LinearLayout>