<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:id="@+id/finallinear"
    android:layout_height="match_parent"
    tools:context=".finalcheckout">
    <TableLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_margin="15dp"

            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:fontFamily="@font/arial"
                android:layout_weight="1"
                android:id="@+id/menuonex"

                android:layout_margin="1dp"
                android:textAlignment="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/exit" />

            <TextView
                android:fontFamily="@font/arial"
                android:layout_weight="1"
                android:id="@+id/menutwoy"
                android:textAlignment="center"

                android:layout_margin="1dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/payment" />

            <TextView
                android:fontFamily="@font/arial"
                android:layout_weight="1"
                android:layout_margin="1dp"
                android:background="@color/red"
                android:textColor="@color/white"
                android:id="@+id/menuthreez"
                android:layout_width="wrap_content"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:text="@string/checkoutq" />
        </TableRow>

    </TableLayout>


    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_margin="7dp"
        android:layout_gravity="center"
        app:cardCornerRadius="0dp"
        app:cardElevation="2dp"
        app:cardMaxElevation="2dp">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:textAlignment="center"
                android:layout_margin="5dp"
                android:textColor="@color/black"
                android:fontFamily="@font/arialbd"
                android:id="@+id/finalusername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="" />

            <TextView
                android:textAlignment="center"
                android:layout_margin="5dp"
                android:fontFamily="@font/arial"
                android:id="@+id/finaluserphone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_margin="7dp"
        android:layout_gravity="center"
        app:cardCornerRadius="0dp"
        app:cardElevation="2dp"
        app:cardMaxElevation="2dp">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:textAlignment="center"
                android:fontFamily="@font/arialbd"
                android:layout_margin="5dp"
                android:id="@+id/finaltown"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="" />

            <TextView
                android:id="@+id/finalestate"
                android:fontFamily="@font/arial"
                android:textAlignment="center"
                android:layout_margin="3dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:layout_margin="7dp"
        android:layout_gravity="center"
        app:cardCornerRadius="0dp"
        app:cardElevation="1dp"
        app:cardMaxElevation="1dp">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:orientation="vertical">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <TextView
                        android:layout_weight="1"
                        android:id="@+id/textView32"
                        android:fontFamily="@font/arial"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/shipp" />

                    <TextView
                        android:layout_weight="1"
                        android:textAlignment="textEnd"
                        android:fontFamily="@font/arial"
                        android:layout_marginRight="10dp"
                        android:id="@+id/finalshippingfee"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <TextView
                        android:layout_weight="1"
                        android:id="@+id/textView36"
                        android:fontFamily="@font/arial"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/cart" />

                    <TextView
                        android:layout_weight="1"
                        android:textAlignment="textEnd"
                        android:layout_marginRight="10dp"
                        android:fontFamily="@font/arial"
                        android:id="@+id/finalfromcarttxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />
                </TableRow>

                <TableRow
                    android:layout_margin="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <View
                        android:id="@+id/divider3"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/black" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <TextView
                        android:layout_weight="1"
                        android:id="@+id/textView41"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/arialbd"
                        android:text="@string/total"
                        android:textColor="@color/black"
                        android:textSize="16dp" />

                    <TextView
                        android:layout_weight="1"
                        android:textAlignment="textEnd"
                        android:layout_marginRight="10dp"
                        android:id="@+id/finaltotaltxt"
                        android:fontFamily="@font/arialbd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />
                </TableRow>
            </TableLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="8dp"
        android:elevation="2dp"
        app:cardBackgroundColor="#4FA502"
        app:cardCornerRadius="10dp"
        app:cardElevation="2dp">
        <Button
            android:background="@android:color/transparent"
            android:id="@+id/paybtn"
            android:layout_margin="5dp"
            android:fontFamily="@font/arialbd"

            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/pay" />
    </androidx.cardview.widget.CardView>

</LinearLayout>