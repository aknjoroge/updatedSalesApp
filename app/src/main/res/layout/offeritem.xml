<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"

    android:layout_margin="2dp"
    app:cardElevation="3dp"
    app:cardCornerRadius="1dp"
    app:cardBackgroundColor="#C8FFFFFF"
    app:cardMaxElevation="3dp"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">





        <LinearLayout
            android:layout_margin="3dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">



            <LinearLayout
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView21"
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    app:srcCompat="@drawable/star_24" />
                <TextView

                    android:id="@+id/dproductname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/arial"
                    android:layout_margin="3dp"
                    android:text="product name"
                    android:textAlignment="center"
                    android:layout_marginLeft="6dp"
                    android:textColor="@color/black"
                    android:textSize="19sp"
                    android:textStyle="bold" />

                <TextView
                    android:textColor="@color/greendark"

                    android:id="@+id/dproductprice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:textSize="20dp"

                    android:fontFamily="@font/arialbd"
                    android:text="price"
                    android:textAlignment="center"
                    />

                <TextView
                    android:id="@+id/dproductoldprice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_marginBottom="3dp"
                    android:fontFamily="@font/arial"

                    android:text="price"
                    android:textAlignment="center"
                    android:textSize="15dp"
                    android:textStyle="italic" />

            </LinearLayout>


            <ImageView
android:layout_weight="1"
                android:scaleType="centerCrop"

                android:id="@+id/dproductimage"
                android:layout_width="110dp"
                android:layout_height="150dp"
                />


        </LinearLayout>











        <TextView
            android:layout_marginBottom="4dp"
            android:id="@+id/dproductdescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_margin="6dp"
            android:text="category"
            android:textAlignment="center"
            android:textColor="@color/black" />
    </LinearLayout>
</androidx.cardview.widget.CardView>