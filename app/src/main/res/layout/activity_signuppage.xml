<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="10dp"
    android:layout_width="match_parent"
    android:background="@drawable/cropmain"

    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".signuppage">



    <TextView
        android:textAlignment="center"
        android:textSize="15dp"
        android:layout_margin="5dp"
        android:fontFamily="@font/arialbd"
        android:textColor="@color/white"

        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/signuplabel1" />

    <TextView
        android:textAlignment="center"
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:textColor="@color/white"
android:fontFamily="@font/arial"
        android:textSize="10dp"
        android:layout_margin="3dp"
        android:layout_height="wrap_content"
        android:text="@string/signuplabel2" />

    <TableLayout
        android:id="@+id/tablelogin"
        android:layout_below="@id/textView3"
        android:layout_width="match_parent"
        android:layout_margin="3dp"
        android:layout_height="wrap_content">

        <TableRow
            android:padding="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <Button
                android:background="@drawable/inputtwo"
                android:textColor="@color/white"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:fontFamily="@font/arial"
                android:id="@+id/mailsignupbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mail" />

            <Button
                android:background="@drawable/inputtwo"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:id="@+id/phonesignupbtn"
                android:fontFamily="@font/arial"
                android:layout_width="wrap_content"
                android:textColor="@color/white"
                android:layout_height="wrap_content"
                android:text="@string/phone" />
        </TableRow>

    </TableLayout>

    <FrameLayout

        android:id="@+id/framesignup"
        android:layout_width="match_parent"
        android:layout_margin="10dp"


        android:background="@drawable/inputtwo"
        android:layout_height="match_parent">

    </FrameLayout>




</LinearLayout>