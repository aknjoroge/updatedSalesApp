<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    

    <string-array name="locations">
        <item>Choose Location</item>
        <item>Nairobi</item>
        <item>Ruaka</item>
        <item>Kikuyu</item>
        <item>Dagoretti</item>
        <item>Uthiru</item>
        <item>Wangige</item>
    </string-array>
    <style name="AlertDialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:colorAccent">#f3f3f3</item>
        <item name="android:textColor">#0B0B0B</item>
        <item name="android:textColorPrimary">#E2000000</item>
    </style>

    <style name="ProgressbarStyle" parent="Theme.AppCompat.Light.Dialog">

        <item name="android:textColor">#0B0B0B</item>

        <item name="fontFamily">@font/arial</item>
        <item name="android:textColorPrimary">#E2000000</item>
    </style>


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>