<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".productdetails">
    <TextView
        android:layout_alignParentTop="true"
        android:textAlignment="center"
        android:background="@color/white"
        android:fontFamily="@font/arial"
        android:textSize="15dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/textView23"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:text="@string/productdetails" />
    <LinearLayout

        android:id="@+id/linearone"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TableLayout
            android:background="@color/white"
            android:layout_margin="1dp"
            android:padding="3dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">



            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <ImageButton
                    android:id="@+id/placecallimage"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    app:srcCompat="@drawable/call_24" />

                <Button
                    android:id="@+id/addtocartbtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="2"
                    android:background="@drawable/custominput"
                    android:text="@string/addtocart"
                    android:textColor="@color/greendark" />
            </TableRow>

        </TableLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_above="@id/linearone"
        android:layout_below="@id/textView23"
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <ScrollView
            android:layout_marginBottom="20dp"
           android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">



                <ImageView
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="10dp"
                    android:id="@+id/detailproductimage"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    app:srcCompat="@drawable/techkey" />

                <View
                    android:id="@+id/divider2"
                    android:layout_width="300dp"
                    android:layout_gravity="center"
                    android:layout_height="2dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="2dp"
                    android:background="#5C151515" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"


                    android:elevation="10dp"
                    app:cardBackgroundColor="@color/white">


                    <LinearLayout
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        >

                        <TextView
                           android:textAlignment="viewStart"
                            android:layout_marginLeft="10dp"
                            android:textSize="21dp"

                            android:id="@+id/detailproductname"
                            android:fontFamily="@font/arialbd"
                            android:textColor="@color/black"

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/name" />

                        <TextView
                            android:id="@+id/detailproductcategory"
                            android:textAlignment="viewStart"
                            android:layout_marginLeft="10dp"
                            android:padding="2dp"
                            android:textSize="14dp"
                            android:fontFamily="@font/arialbd"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                           />

                        <TextView
                            android:textAlignment="viewStart"
                            android:layout_marginLeft="10dp"
                            android:textSize="17dp"
                            android:padding="2dp"
                            android:fontFamily="@font/arialbd"
                            android:textColor="@color/black"
                            android:id="@+id/detailproductprice"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                             />
                        <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
                            android:id="@+id/elegandadd"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:layout_gravity="center"


                            app:finalNumber="10"
                            app:initialNumber="1"

                            app:textSize="16dp"></com.cepheuen.elegantnumberbutton.view.ElegantNumberButton>


                        <RatingBar
android:layout_gravity="left"
                            android:layout_margin="4dp"
                            android:id="@+id/ratingBar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:numStars="5"

                            android:progressTint="#BBFF00"
                            android:isIndicator="true"
                            android:rating="3"
                            />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/detailproductdescription"
                    android:textSize="17dp"
                    android:layout_margin="5dp"
                    android:fontFamily="@font/arialbd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Description: null" />

                <View
                    android:id="@+id/dikvidesr2"
                    android:layout_width="300dp"
                    android:layout_gravity="center"
                    android:layout_height="2dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="#5C151515" />

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_marginLeft="5dp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/arial"
                            android:id="@+id/textView40"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/accompaniments" />

                        <TextView
                            android:id="@+id/textView33"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_margin="1dp"
                            android:text="@string/ugali"
                            android:fontFamily="@font/arial"
                            android:textAlignment="center" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/textView34"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/textView37"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_margin="1dp"
                            android:fontFamily="@font/arial"
                            android:text="@string/soup"
                            android:textAlignment="center" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/textView35"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:fontFamily="@font/arial"
                            android:id="@+id/textView38"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_margin="1dp"
                            android:text="@string/salad"
                            android:textAlignment="center" />
                    </TableRow>


                </TableLayout>

                <View
                    android:id="@+id/dikvider2"
                    android:layout_width="300dp"
                    android:layout_gravity="center"
                    android:layout_height="2dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="2dp"
                    android:background="#5C151515" />
                <TextView
                    android:layout_marginTop="10dp"
                    android:textSize="17dp"
                    android:id="@+id/textView39"
                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/arialbd"
                    android:textColor="@color/black"
                    android:text="@string/similar" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerproductdetail"
                    android:layout_width="match_parent"
                    android:layout_marginBottom="10dp"
                    android:layout_height="300dp"
                    android:layout_above="@id/bottomnavnew"
                    android:scrollbars="vertical" />

                <TextView
                    android:layout_margin="10dp"
                    android:textAlignment="center"
                    android:id="@+id/textView24"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/copyright" />

            </LinearLayout>
        </ScrollView>

    </RelativeLayout>


</RelativeLayout>