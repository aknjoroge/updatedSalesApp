<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:gravity="center"
    android:background="@drawable/cropmain"
    android:layout_height="match_parent"
    tools:context=".about">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
app:cardBackgroundColor="#03FFFFFF"
                android:layout_margin="10dp"
                android:elevation=".5dp"
                app:cardElevation=".5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_margin="4dp"
                        android:id="@+id/imageView11"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        app:srcCompat="@drawable/porkpitlogo" />

                    <ImageView
                        android:id="@+id/imageView12"
                        android:layout_marginBottom="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        app:srcCompat="@drawable/tuwashowlogo" />

                    <TextView
                        android:id="@+id/textView61"
                        android:layout_width="match_parent"
                        android:layout_marginTop="20dp"
                        android:layout_height="wrap_content"
                        android:text="CONTACT"
                        android:visibility="invisible"
                        android:fontFamily="@font/fontone"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="23sp" />

                    <TextView
                        android:id="@+id/textView68"
                        android:fontFamily="@font/arialbd"
                        android:layout_margin="10dp"
                        android:textSize="18dp"
                        android:layout_width="match_parent"
                        android:textColor="#D0FFFFFF"
                        android:layout_height="wrap_content"
                        android:text="@string/support" />

                    <Button
                        android:id="@+id/button1c"
                        android:layout_margin="5dp"
                        android:layout_width="300dp"

                        android:layout_gravity="center"
                        android:fontFamily="@font/arial"
                        android:layout_height="wrap_content"
                        android:background="@drawable/custominput"
                        android:text="call : +254710664418" />

                    <Button
                        android:layout_margin="5dp"
                        android:id="@+id/button2c"
                        android:layout_width="300dp"
                        android:layout_gravity="center"
                        android:fontFamily="@font/arial"

                        android:layout_height="wrap_content"
                        android:background="@drawable/custominput"
                        android:text="call : +254738462140" />

                    <TextView
                        android:layout_marginTop="10dp"
                        android:id="@+id/textView10"
                        android:layout_width="wrap_content"
                        android:fontFamily="@font/arialbd"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="ABOUT:"
                        android:textColor="#D0FFFFFF"
                        android:textSize="19sp" />

                    <TextView
                        android:id="@+id/texstViesw18"
                        android:layout_width="wrap_content"
                        android:fontFamily="@font/arial"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:textColor="#D0FFFFFF"
                        android:text="@string/aboutus"
                        />

                    <TextView
                        android:id="@+id/textView18"
                        android:layout_width="wrap_content"
                        android:fontFamily="@font/arial"
                        android:textSize="11dp"
                        android:textAlignment="center"
                        android:layout_gravity="center"
                        android:textColor="#D0FFFFFF"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:text="@string/poweredby"
                        />


                    <TextView
                        android:textColor="#D0FFFFFF"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:fontFamily="@font/arial"
                        android:textAlignment="center"
                        android:textSize="10dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginRight="8dp"
                        android:text="@string/www.tuwa"
                        />

                    <TextView
                        android:textColor="#D0FFFFFF"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:fontFamily="@font/arial"
                        android:textAlignment="center"
                        android:textSize="10dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginRight="8dp"
                        android:text="@string/www.tech"
                         />


                    <TextView
                        android:id="@+id/textView37SSS"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="10dp"
                        android:text="LICENSE:"
                        android:fontFamily="@font/arialbd"
                        android:textColor="#D0FFFFFF"
                        android:textSize="19sp" />
                    <TextView
                        android:id="@+id/ts"
                        android:textColor="#D0FFFFFF"
                        android:layout_width="wrap_content"
                        android:fontFamily="@font/arial"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:text="@string/license"
                        />



                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <com.imankur.analogclockview.AnalogClock
                android:layout_width="130dp"
                app:showSecondHand="true"


                android:layout_gravity="center"
                android:layout_height="130dp">

            </com.imankur.analogclockview.AnalogClock>

            <TextView
                android:textAlignment="center"
                android:id="@+id/textVkiew15"
                android:fontFamily="@font/arialbd"
                android:layout_width="match_parent"
                android:textSize="11dp"
                android:text="Developed By Techkey A Company Of Tuwashow_Africa"
                android:layout_height="wrap_content"
                android:layout_margin="5dp">

            </TextView>
            <TextView
                android:id="@+id/textView20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="5dp"
                android:textSize="10dp"
                android:textAlignment="center"
                android:fontFamily="@font/arialbd"
                android:layout_marginRight="8dp"
                android:text="A DIGITAL PLATFORM est MMXVIII"
                />
            <ImageView
                android:id="@+id/imageView14"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                app:srcCompat="@drawable/techkey" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>