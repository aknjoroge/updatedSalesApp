<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/cropmain"
    android:layout_height="match_parent"

    tools:context=".account">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
android:background="@drawable/cropmain"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"

            android:orientation="vertical">



                <LinearLayout
                    android:padding="10dp"
                    android:background="@drawable/cropmain"
                    android:layout_width="match_parent"
                    android:layout_height="740dp"
                    android:layout_margin="10dp"
                    android:gravity="center"

                    android:orientation="vertical">


                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_alignParentTop="true"
                        android:id="@+id/textView26"
                        android:layout_width="match_parent"
                        android:drawablePadding="5dp"
                        android:drawableTint="@color/black"
                        android:drawableStart="@drawable/account_box_24"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:background="@android:color/transparent"
                        android:fontFamily="@font/arialbd"
                        android:textSize="25dp"
                        android:paddingTop="1dp"
                        android:padding="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_height="wrap_content"
                        android:text="@string/accounts" />


                    <androidx.cardview.widget.CardView
                        android:id="@+id/view2"
                        android:layout_width="140dp"
                        android:layout_height="140dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="10dp"
app:cardBackgroundColor="#11FD0404"
                        android:background="#05FFFFFF"
                        android:shape="ring"
                        app:cardCornerRadius="95dp">

                        <ImageView
                            android:id="@+id/dpinsetting"

                            android:layout_width="140dp"
                            android:layout_height="140dp"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:scaleType="centerCrop"
                            app:srcCompat="@drawable/porkpitlogo" />
                    </androidx.cardview.widget.CardView>
                    <TextView
                        android:id="@+id/dpchangetxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/arialbd"
                        android:gravity="center"
                        android:textSize="11sp"
                        android:layout_margin="5dp"

                        android:text="@string/setpic"
                        android:textColor="#D0FFFFFF" />


                    <TableLayout
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:layout_margin="2dp">

                            <TextView
                                android:id="@+id/textView3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="4dp"
                                android:fontFamily="@font/arial"
                                android:text="@string/name"
                                android:textColor="@color/black"
                                android:textSize="16sp" />
                            <Button
android:drawableEnd="@drawable/edit_24"


                                android:textSize="12sp"
                                android:id="@+id/setchangennamebtn"
                                android:layout_width="15dp"
                                android:layout_height="25dp"
                                android:layout_marginRight="10dp"
                                android:layout_weight="1"
                                android:background="@android:color/transparent"
                                android:fontFamily="@font/arialbd"
                                android:padding="1dp"
                                android:textColor="#D0FFFFFF"
                                />

                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/settxtnam"
                                android:layout_width="wrap_content"
                                android:textColor="#D0FFFFFF"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:fontFamily="@font/arial" />


                        </TableRow>





                        <TableRow
                            android:layout_margin="3dp"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/textView6"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="4dp"
                                android:fontFamily="@font/arial"
                                android:text="@string/phone"
                                android:textColor="@color/black"
                                android:textSize="16sp" />

                            <Button
                                android:drawableEnd="@drawable/edit_24"
                                android:textSize="12sp"
                                android:id="@+id/setchangephonebtn"
                                android:layout_width="wrap_content"
                                android:layout_height="25dp"
                                android:layout_marginRight="10dp"
                                android:layout_weight="1"
                                android:background="@android:color/transparent"
                                android:fontFamily="@font/arialbd"
                                android:padding="1dp"

                                android:textColor="#D0FFFFFF"
                                />


                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/setphonename"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:textColor="#D0FFFFFF"
                                android:layout_marginLeft="5dp"
                                android:fontFamily="@font/arial"
                                android:text="@string/nothing" />


                        </TableRow>



                        <TableRow
                            android:layout_margin="2dp"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/textView7"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="4dp"
                                android:fontFamily="@font/arial"
                                android:text="@string/mail"
                                android:textColor="@color/black"
                                android:textSize="16sp" />
                            <Button
                                android:drawableEnd="@drawable/edit_24"
                                android:textSize="12sp"
                                android:id="@+id/setchangeemailbtn"
                                android:layout_width="wrap_content"
                                android:layout_height="25dp"
                                android:layout_marginRight="10dp"
                                android:layout_weight="1"
                                android:background="@android:color/transparent"
                                android:fontFamily="@font/arialbd"
                                android:padding="1dp"

                                android:textColor="#D0FFFFFF"
                                />


                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">


                            <TextView
                                android:id="@+id/setemailname"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:textColor="#D0FFFFFF"
                                android:layout_marginLeft="5dp"
                                android:fontFamily="@font/arial" />

                        </TableRow>



                        <TableRow
                            android:layout_margin="3dp"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/textView9"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="4dp"
                                android:fontFamily="@font/arial"
                                android:text="@string/location"
                                android:textColor="@color/black"
                                android:textSize="16sp" />

                            <Button
                                android:drawableEnd="@drawable/edit_24"
                                android:id="@+id/setupdatelocationbtn"
                                android:layout_width="wrap_content"
                                android:layout_height="25dp"
                                android:layout_marginRight="10dp"
                                android:layout_weight="1"
                                android:background="@android:color/transparent"
                                android:fontFamily="@font/arialbd"
                                android:padding="1dp"

                                android:textColor="#D0FFFFFF"
                                android:textSize="12sp" />


                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:textColor="#D0FFFFFF"
                                android:id="@+id/setlocationname"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:fontFamily="@font/arial" />


                        </TableRow>


                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="6dp"
                            android:layout_marginBottom="6dp">

                            <Button
                            android:drawableTop="@drawable/settings_24"
                                android:layout_width="15dp"
                                android:layout_height="30dp"
                                android:layout_margin="5dp"
                                android:layout_weight="1"
                               android:background="@android:color/transparent"
                                android:padding="1dp"
                                />



                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="6dp"
                            android:layout_marginBottom="6dp">

                            <Button

                                android:textSize="13sp"
                                android:id="@+id/resetcart"
                                android:layout_width="15dp"
                                android:layout_height="20dp"
                                android:layout_marginRight="10dp"
                                android:layout_weight="1"
                                android:background="@android:color/transparent"
                                android:fontFamily="@font/arialbd"
                                android:padding="1dp"
                                android:text="@string/resetcart"
                                android:textColor="#D0FFFFFF"
                                 />



                        </TableRow>




                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <Button

                                android:id="@+id/setchangepassbtn"
                                android:layout_width="wrap_content"
                                android:layout_height="20dp"
                                android:layout_marginTop="6dp"
                                android:layout_marginBottom="5dp"
                                android:layout_weight="1"
                                android:background="@android:color/transparent"
                                android:fontFamily="@font/arialbd"
                                android:text="change password "
                                android:textColor="#D0FFFFFF"
                                android:textSize="13dp" />
                        </TableRow>


                    </TableLayout>

                    <TextView
                        android:id="@+id/tetViehw51"
                        android:layout_gravity="center"
                        android:fontFamily="@font/arial"
                        android:textSize="12dp"
                        android:layout_marginTop="10dp"
                        android:layout_margin="5dp"
                        android:textAlignment="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/contact" />

                    <ImageButton

                        android:id="@+id/placecallaccounts"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        app:srcCompat="@drawable/call_24" />




                    <TextView
                        android:id="@+id/tetView51"
                        android:layout_gravity="center"
                        android:fontFamily="@font/arial"
                        android:textSize="10dp"
                        android:layout_margin="5dp"
                        android:textAlignment="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/copyright" />
                    <TextView
                        android:id="@+id/textView51"
                        android:layout_gravity="center"
                        android:fontFamily="@font/arial"
                        android:textSize="10dp"
                        android:textAlignment="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/version" />

                </LinearLayout>




        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>