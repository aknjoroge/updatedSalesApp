<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".loginphone">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_gravity="center"
            android:orientation="vertical"
            android:padding="15dp">

            <androidx.cardview.widget.CardView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="right"
                android:layout_marginTop="5dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="8dp"

                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="30dp">

            </androidx.cardview.widget.CardView>

            <EditText
                android:id="@+id/userloginphone"
                android:layout_width="260dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:textColorHint="@color/white"
                android:layout_margin="5dp"
                android:background="@drawable/inputtwo"
                android:fontFamily="@font/arial"
                android:textColor="@color/white"
                android:ems="10"
                android:hint="@string/phone"
                android:inputType="phone"
                android:padding="5dp"
                android:textAlignment="center" />

            <EditText
                android:id="@+id/userloginpassword"
                android:layout_width="260dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:layout_margin="5dp"
                android:background="@drawable/inputtwo"
                android:fontFamily="@font/arial"
                android:textColorHint="@color/white"
                android:ems="10"
                android:hint="@string/Password"
                android:inputType="textPassword"
                android:padding="5dp"
                android:textAlignment="center" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/textView4"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/remembermettxt" />

                    <CheckBox
                        android:textColor="@color/white"
                        android:backgroundTint="@color/white"
                        android:id="@+id/checkBoxphone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="15dp"

                        />


                </TableRow>

            </TableLayout>

            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_margin="3dp"
                android:background="?android:attr/listDivider" />

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="8dp"
                android:elevation="20dp"
                app:cardBackgroundColor="@color/blue"
                app:cardCornerRadius="10dp"
                app:cardElevation="20dp">

                <Button
                    android:id="@+id/phoneloginbtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/arialbd"
                    android:text="@string/logintxt"
                    android:textColor="@color/white" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/forgotpasswordtxt2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/arial"
                android:layout_margin="5dp"
                android:textAlignment="center"
                android:text="@string/forgotxt"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/resendphoneverification"
                android:layout_width="match_parent"
                android:fontFamily="@font/arial"
                android:textSize="13dp"
                android:visibility="gone"
                android:layout_height="wrap_content"
                android:text="@string/resendverification"
                android:textAlignment="center"
                android:textColor="#54AA07" />

        </LinearLayout>
    </ScrollView>

</FrameLayout>