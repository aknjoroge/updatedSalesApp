<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"

    android:layout_margin=".5dp"
    app:cardElevation="2dp"
    app:cardMaxElevation="2dp"
    android:padding=".5dp"
    app:cardCornerRadius="0dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:gravity="center"
            android:layout_margin="2dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView

                android:id="@+id/imageView18"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/porkpitlogo" />



            <TextView
                android:textAlignment="textStart"
                android:fontFamily="@font/arialbd"
                android:layout_margin="3dp"
                android:layout_weight="2"
android:textSize="16dp"
                android:id="@+id/feednametxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView" />

            <ImageButton
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:id="@+id/feedshare"
                android:background="@android:color/transparent"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:srcCompat="@drawable/share_24" />

        </LinearLayout>

        <TableLayout
            android:layout_margin="2dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TableRow
                android:layout_margin="2dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >


            </TableRow>
            <TableRow
                android:layout_margin="2dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <ImageView
                    android:layout_margin="7dp"
                    android:id="@+id/imageView6"
                    android:scaleType="centerInside"
                    android:layout_width="wrap_content"
                    android:layout_height="160dp"
                    app:srcCompat="@drawable/porkpitlogo" />
            </TableRow>


            <TableRow

                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <LinearLayout
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <com.like.LikeButton
                        android:layout_weight="1"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:padding="5dp"
                        app:icon_type="heart"
                        app:icon_size="15dp"
                        android:layout_margin="4dp"
                        app:anim_scale_factor="2"
                        app:circle_start_color="@color/colorPrimary"
                        android:id="@+id/feedlike"
                        >

                    </com.like.LikeButton>
                    <TextView
                        android:layout_weight="1"
                        android:textAlignment="center"
                        android:fontFamily="@font/arial"
                        android:layout_margin="1dp"
                        android:id="@+id/feedlikeno"
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"
                        android:text="10" />

                    <Button
                        android:layout_weight="1"
                        android:id="@+id/feedmorebtn"
                        android:layout_margin="3dp"
android:textColor="@color/black"
                        android:fontFamily="@font/arial"
                        android:layout_width="70dp"
                        android:background="@android:color/transparent"
                        android:layout_height="wrap_content"
                        android:text="@string/viewproduct" />


                    <ImageButton
                        android:layout_margin="3dp"
                        android:layout_weight="1"
                        android:id="@+id/downloadimg"
                        android:background="@android:color/transparent"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        app:srcCompat="@drawable/downward_24" />
                </LinearLayout>




            </TableRow>



        </TableLayout>


    </LinearLayout>
</androidx.cardview.widget.CardView>